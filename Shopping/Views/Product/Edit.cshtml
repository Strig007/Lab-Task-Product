@model Shopping.Models.Entities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Product/Edit" method="post">
    Id: <input type="text" name="Id" class="form-control" value="@Model.Id"/>
    Name: <input type="text" name="Name" class="form-control" value="@Model.Name" />
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" }) <br />

    Quantity: <input type="text" name="Quantity" class="form-control" value="@Model.Quantity" />
    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" }) <br />

    Price: <input type="text" name="Price" class="form-control" value="@Model.Price" />
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" }) <br />

    Description: <input type="text" name="Description" class="form-control" value="@Model.Description" />
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" }) <br />

    <input type="submit" name="submit" value="Modify Product" />
</form>
